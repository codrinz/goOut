<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codrin.showitnow.MainActivity">

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/showsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openShows"
                android:text="Manage Shows" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openAddShow"
                android:text="Add shows" />

            <Button
                android:id="@+id/showDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openShowList"
                android:text="Show list" />

            <Button
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openContact"
                android:text="Contact"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="271dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
